@model JoHealth.Models.Doctor

<div class="container mt-4">
    <!-- Doctor Details -->
    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.FirstName @Model.LastName">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.FirstName @Model.LastName</h3>
                    <p class="text-muted">@Model.Specialty</p>
                </div>
            </div>
        </div>
    </div>
    @if (User.Identity.IsAuthenticated && Model != null)
    {
        <h2>Submit Your Record</h2>
        <form asp-controller="Records" asp-action="SubmitRecord" method="post">
            <div>
                <input type="hidden" name="DoctorId" value="@Model.Id" />
                <label>Age:</label>
                <input type="number" name="Age" placeholder="Enter your age" required />
            </div>
            <div>
                <label>Gender:</label>
                <select name="Gender" required>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div>
                <label>Description:</label>
                <textarea name="Description" required></textarea>
            </div>
            <div>
                <label>Is it recurring?</label>
                <input type="checkbox" name="IsRecurring" />
            </div>
            <button type="submit">Submit</button>
        </form>
        <!-- Book Appointment Button -->
        <div class="mt-4">
            <button id="book-appointment" class="btn btn-primary btn-block">Book Appointment</button>
        </div>
    }
    else
    {
        <p class="text-warning">Please log in and select a doctor to submit a record.</p>
    }
</div>

<!-- Booking Successful Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="mb-3">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                </div>
                <h5>Booking Successful</h5>
                <p>Your payment has been successful, you can have a consultation session with your trusted doctor.</p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('book-appointment').addEventListener('click', function (e) {
        e.preventDefault();

        // Show the modal
        var bookingModal = new bootstrap.Modal(document.getElementById('bookingModal'));
        bookingModal.show();

        // Redirect to home page after 3 seconds
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Home")';
        }, 3000);
    });
</script>
