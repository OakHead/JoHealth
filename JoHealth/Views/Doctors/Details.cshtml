@model JoHealth.Models.Doctor

<div class="container mt-4">
    <!-- Doctor Details -->
    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.FirstName @Model.LastName">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.FirstName @Model.LastName</h3>
                    <p class="text-muted">@Model.Specialty</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Submit Record Form -->
    @if (User.Identity.IsAuthenticated)
    {
        <h3>Submit Your Record</h3>
        <form asp-action="SubmitRecord" asp-controller="Patients" method="post">
            <!-- Automatically pass the selected doctor's Id -->
            <input type="hidden" name="DoctorId" value="@Model.Id" /> <!-- Doctor Id from IdentityUser -->

            <div class="form-group">
                <label for="Age">Age</label>
                <input id="Age" name="Age" type="number" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="Gender">Gender</label>
                <select id="Gender" name="Gender" class="form-control" required>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <textarea id="Description" name="Description" class="form-control" required></textarea>
            </div>

            <div class="form-group">
                <label for="IsRecurring">Is it recurring?</label>
                <input id="IsRecurring" name="IsRecurring" type="checkbox" class="form-check-input" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    }
    else
    {
        <p class="text-warning">Please log in to submit a record.</p>
    }
</div>


<!-- Booking Successful Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="mb-3">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                </div>
                <h5>Booking Successful</h5>
                <p>Your payment has been successful, you can have a consultation session with your trusted doctor.</p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('book-appointment').addEventListener('click', function (e) {
        e.preventDefault();

        // Show the modal
        var bookingModal = new bootstrap.Modal(document.getElementById('bookingModal'));
        bookingModal.show();

        // Redirect to home page after 3 seconds
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Home")';
        }, 3000);
    });
</script>
