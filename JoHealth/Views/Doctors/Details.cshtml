@model JoHealth.Models.Doctor

<div class="container mt-4">
    <!-- Back Button -->
    <div class="mb-3">
        <a href="@Url.Action("Booking", "Doctors")" class="btn btn-secondary">Back to Doctors</a>
    </div>

    <!-- Doctor Details -->
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.FirstName @Model.LastName">
        </div>
        <div class="col-md-8">
            <h2>@Model.FirstName @Model.LastName</h2>
            <p class="text-muted">@Model.Specialty</p>
            <p>More details about the doctor can go here...</p>
        </div>
    </div>
</div>
