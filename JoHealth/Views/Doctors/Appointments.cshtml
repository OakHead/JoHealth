@model IEnumerable<JoHealth.Models.Record>

<h2>Appointments</h2>

@if (Model.Any())
{
    <div class="row">
        @foreach (var record in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@record.FirstName @record.LastName</h5>
                        <p class="card-text">
                            <strong>Age:</strong> @record.Age<br />
                            <strong>Gender:</strong> @record.Gender<br />
                            <strong>Description:</strong> @record.Description<br />
                            <strong>Submitted On:</strong> @record.CreatedAt.ToShortDateString()
                        </p>
                        <a href="@Url.Action("Details", "Doctors", new { id = record.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">There are no available patient records at the moment.</p>
}
