@model IEnumerable<JoHealth.Models.NewRecord>

<div class="container mt-4">
    <h2>Appointments</h2>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Description</th>
                    <th>Is Recurring</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.FirstName</td>
                        <td>@record.LastName</td>
                        <td>@record.Age</td>
                        <td>@record.Gender</td>
                        <td>@record.Description</td>
                        <td>@record.CreatedAt.ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No appointments found.</p>
    }
</div>
