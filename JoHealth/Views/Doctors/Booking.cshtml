@model IEnumerable<JoHealth.Models.Doctor>

<div class="container mt-4">
    <h2 class="text-center mb-4">Doctors</h2>
    <div class="row">
        @foreach (var doctor in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@doctor.ImageUrl" class="card-img-top" alt="@doctor.FirstName @doctor.LastName" style="height: 200px; object-fit: cover;" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@doctor.FirstName @doctor.LastName</h5>
                        <p class="card-text text-muted" style="font-size: 0.9em;">@doctor.Specialty</p>
                        <a href="@Url.Action("Details", "Doctors", new { id = doctor.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
