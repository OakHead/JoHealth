@model IEnumerable<JoHealth.Models.Doctor>

<div class="container mt-4">
    <h2 class="text-center">Doctors</h2>

    <div class="row mt-4">
        @foreach (var doctor in Model)
        {
            <div class="col-12 mb-3">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-3">
                            <img src="@doctor.ImageUrl" class="img-fluid rounded-start" alt="@doctor.FirstName @doctor.LastName">
                        </div>
                        <div class="col-9">
                            <div class="card-body">
                                <h5 class="card-title">@doctor.FirstName @doctor.LastName</h5>
                                <p class="text-muted">@doctor.Specialty</p>
                                <a href="@Url.Action("Details", "Doctors", new { id = doctor.Id })" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
