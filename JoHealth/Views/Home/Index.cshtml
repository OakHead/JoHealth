@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <!-- Welcome Section -->
    <div class="text-center mb-4">
        <img src="@ViewBag.ImageUrl" class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover;" alt="User Profile">
        <h2>Welcome, @ViewBag.FirstName!</h2>
        <p>We hope you're having a wonderful day!</p>
    </div>

    <!-- Health Articles Section -->
    <div class="mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h4>Health Articles</h4>
            <a href="@Url.Action("Index", "Articles")" class="text-primary">See all</a>
        </div>

        <div class="row mt-3">
            <!-- Article Card -->
            <div class="col-12 mb-3">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-3">
                            <img src="/img/Health.jpg" class="img-fluid rounded-start" alt="Article Image">
                        </div>
                        <div class="col-9">
                            <div class="card-body">
                                <h6 class="card-title">The 25 Healthiest Fruits You Can Eat</h6>
                                <p class="text-muted small mb-0">Jun 10, 2023</p>
                                <p class="text-muted small">5 min read</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Repeat for other articles -->
            <div class="col-12 mb-3">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-3">
                            <img src="/img/Covid.jpg" class="img-fluid rounded-start" alt="Article Image">
                        </div>
                        <div class="col-9">
                            <div class="card-body">
                                <h6 class="card-title">The Impact of COVID-19 on Healthcare Systems</h6>
                                <p class="text-muted small mb-0">Jul 10, 2023</p>
                                <p class="text-muted small">5 min read</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Doctors Section -->
    <div class="mb-5">
        <h3>Top Doctors <a href="@Url.Action("Booking", "Doctors")" class="text-primary small">See all</a></h3>
        <div class="row">
            @foreach (var doctor in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <img src="@doctor.ImageUrl" class="card-img-top" alt="@doctor.FirstName @doctor.LastName">
                        <div class="card-body text-center">
                            <h5 class="card-title">@doctor.FirstName @doctor.LastName</h5>
                            <p class="text-muted">@doctor.Specialty</p>
                            <a href="@Url.Action("Details", "Doctors", new { id = doctor.Id })" class="btn btn-primary">View Profile</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

