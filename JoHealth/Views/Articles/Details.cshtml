@model JoHealth.Models.Article

<div class="container mt-4">
    <!-- Back Button -->
    <div class="mb-3">
        <a href="@Url.Action("Index", "Articles")" class="text-dark">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <!-- Article Details -->
    <div class="text-center">
        <img src="@Model.ImageUrl" class="img-fluid mb-3" alt="@Model.Title">
        <h2>@Model.Title</h2>
        <p class="text-muted">By @Model.Author - @Model.PublishDate.ToString("MMM dd, yyyy")</p>
        <hr>
        <p>@Model.Body</p>
    </div>
</div>
