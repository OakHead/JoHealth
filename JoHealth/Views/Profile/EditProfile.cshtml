@model JoHealth.Models.Doctor

<div class="container mt-4">
    <h2>Edit Profile</h2>

    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required />
        </div>

        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required />
        </div>

        <div class="form-group">
            <label for="ImageFile">Profile Image</label>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div>
                    <img src="@Model.ImageUrl" alt="Profile Image" class="img-thumbnail" style="width: 150px; height: 150px;" />
                </div>
            }
            <input type="file" class="form-control" id="ImageFile" name="ImageFile" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    </form>
</div>
