@model JoHealth.Models.Patient

<div class="container text-center mt-4">
    <!-- Profile Picture and Name -->
    <img src="@Model.ImageUrl" class="rounded-circle" alt="Profile Picture" style="width: 100px; height: 100px;">
    <h3 class="mt-3">@Model.FirstName @Model.LastName</h3>

    <!-- Stats Section -->
    <div class="d-flex justify-content-around mt-4">
        <div>
            <i class="bi bi-heart-fill text-primary" style="font-size: 24px;"></i>
            <p class="mb-0">Blood Type</p>
            <strong>@Model.BloodType</strong>
        </div>
        <div>
            <i class="bi bi-scale text-primary" style="font-size: 24px;"></i>
            <p class="mb-0">Weight</p>
            <strong>@Model.Weight</strong>
        </div>
    </div>

    <!-- Options Section -->
    <div class="mt-4">
        <a href="@Url.Action("Reports", "Profile")" class="btn btn-outline-primary btn-block d-flex align-items-center justify-content-between">
            <span><i class="bi bi-file-earmark-text"></i> Reports</span>
            <i class="bi bi-chevron-right"></i>
        </a>
        <a href="@Url.Action("Appointments", "Profile")" class="btn btn-outline-primary btn-block d-flex align-items-center justify-content-between mt-2">
            <span><i class="bi bi-calendar-check"></i> Appointment</span>
            <i class="bi bi-chevron-right"></i>
        </a>
        <a href="@Url.Action("PaymentMethod", "Profile")" class="btn btn-outline-primary btn-block d-flex align-items-center justify-content-between mt-2">
            <span><i class="bi bi-credit-card"></i> Payment Method</span>
            <i class="bi bi-chevron-right"></i>
        </a>
        <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger btn-block d-flex align-items-center justify-content-between mt-2">
            <span><i class="bi bi-box-arrow-right"></i> Logout</span>
            <i class="bi bi-chevron-right"></i>
        </a>
    </div>
</div>
