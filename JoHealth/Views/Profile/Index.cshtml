@model dynamic
@using System.Security.Claims

<div class="container mt-4 text-center">
    <div class="profile-header">
        <img src="@Model.ImageUrl" class="rounded-circle" alt="Profile Picture" style="width: 100px; height: 100px;">
        <h3>@Model.FirstName @Model.LastName</h3>
    </div>

    @if ((string)ViewData["Role"] == "Patient")
    {
        <div class="profile-stats mt-3">
            <p><strong>Blood Type:</strong> @Model.BloodType</p>
            <p><strong>Weight:</strong> @Model.Weight lbs</p>
        </div>
    }
    else if ((string)ViewData["Role"] == "Doctor")
    {
        <div class="profile-stats mt-3">
            <p><strong>Specialization:</strong> @Model.Specialty</p>
        </div>
    }

    <div class="menu mt-4">
        <a href="@Url.Action(ViewData["Role"] == "Patient" ? "PatientRecords" : ViewData["Role"] == "Doctor" ? "DoctorRecords" : "PharmacistRecords", "Profile")"
           class="btn btn-outline-primary mb-2 w-100">
            Reports
        </a>
        <a href="@Url.Action("EditProfile", "Profile")" class="btn btn-outline-secondary mb-2 w-100">
            Edit Profile
        </a>
    </div>
</div>
