<div class="bottom-nav-container">
    <div class="bottom-nav fixed-bottom">
        <div class="d-flex justify-content-around py-2">
            <a href="@Url.Action("Index", "Home")" class="nav-link d-flex flex-column align-items-center mx-3 @((ViewData["ActiveNav"] as string) == "Home" ? "active" : "")">
                <i class="bi bi-house-fill"></i>
                <span class="small mt-1">Home</span>
            </a>
            <a href="@Url.Action(User.IsInRole("Pharmacist") ? "Pharmacy" : "Index", "Medicines")"
               class="nav-link d-flex flex-column align-items-center mx-3 @((ViewData["ActiveNav"] as string) == "Pharmacy" ? "active" : "")">
                <i class="bi bi-bag-fill"></i>
                <span class="small mt-1">
                    @if (User.IsInRole("Pharmacist"))
                    {
                        @:Reports
                    }
                    else
                    {
                        @:Pharmacy
                    }
                </span>
            </a>
            <a href="@Url.Action(User.IsInRole("Doctor") ? "Appointments" : "Booking", "Doctors")"
               class="nav-link d-flex flex-column align-items-center mx-3 @((ViewData["ActiveNav"] as string) == "Booking" || (ViewData["ActiveNav"] as string) == "Appointments" ? "active" : "")">
                <i class="bi bi-calendar-check-fill"></i>
                <span class="small mt-1">
                    @if (User.IsInRole("Doctor"))
                    {
                        @:Appointments
                    }
                    else
                    {
                        @:Booking
                    }
                </span>
            </a>
            <a href="@Url.Action("Index", "Profile")" class="nav-link d-flex flex-column align-items-center mx-3 @((ViewData["ActiveNav"] as string) == "Profile" ? "active" : "")">
                <i class="bi bi-person-fill"></i>
                <span class="small mt-1">Profile</span>
            </a>
        </div>
    </div>
</div>
